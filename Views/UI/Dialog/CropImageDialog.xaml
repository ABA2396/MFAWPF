<controls1:CustomWindow
    Height="200"
    IsResizable="True"
    Title="{lex:Loc ImageBrowserTitle}"
    Width="400"
    x:Class="MFAWPF.Views.UI.Dialog.CropImageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:MFAWPF.Views.UserControl"
    xmlns:controls1="clr-namespace:MFAWPF.Views.UserControl"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:MFAWPF.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Background="{DynamicResource WhiteColor}"
        BorderBrush="{DynamicResource GrayColor10}"
        BorderThickness="1"
        CornerRadius="10"
        MouseDown="Canvas_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Border
                Background="{DynamicResource MainContentBackgroundBrush}"
                ClipToBounds="False"
                CornerRadius="10 10 0 0"
                x:Name="TitleBar">
                <Grid Height="34">
                    <TextBlock
                        FontSize="17"
                        FontWeight="Bold"
                        Foreground="{DynamicResource BlackColor}"
                        HorizontalAlignment="Center"
                        IsHitTestVisible="False"
                        Margin="0,0,0,0"
                        Text="{lex:Loc ImageBrowserTitle}"
                        VerticalAlignment="Center"
                        x:Name="TitleText" />
                    <Button
                        Click="Close"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Height="22"
                        HorizontalAlignment="Right"
                        Margin="0,4,4,0"
                        Padding="0"
                        Style="{StaticResource ButtonIcon}"
                        VerticalAlignment="Top"
                        Width="22"
                        hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                        x:Name="CloseButton" />
                </Grid>
            </Border>
            <hc:LoadingCircle
                Grid.Row="1"
                Height="50"
                Margin="10,5,5,0"
                Width="50"
                x:Name="LoadingCircle" />
            <Viewbox
                Grid.Row="1"
                HorizontalAlignment="Center"
                Visibility="Collapsed"
                x:Name="ImageArea">
                <Grid>
                    <Grid>
                        <Image
                            Grid.Column="0"
                            Grid.Row="0"
                            MaxHeight="720"
                            MaxWidth="1280"
                            Stretch="Uniform"
                            x:Name="image" />
                        <Canvas
                            Background="Transparent"
                            Grid.Column="0"
                            Grid.Row="0"
                            MouseMove="Canvas_MouseMove"
                            MouseUp="Canvas_MouseUp"
                            Panel.ZIndex="1"
                            x:Name="SelectionCanvas" />

                    </Grid>
                    <TextBlock
                        Background="Transparent"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        IsHitTestVisible="False"
                        Margin="10,10,0,0"
                        Panel.ZIndex="2"
                        VerticalAlignment="Top"
                        x:Name="MousePositionText">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="0"
                                Color="Black"
                                Opacity="1"
                                ShadowDepth="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </Viewbox>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Orientation="Horizontal">
                <Button
                    Click="Select"
                    Content="{lex:Loc Select}"
                    FontSize="11"
                    Foreground="{DynamicResource BlackColor}"
                    Margin="20,0,5,10"
                    ToolTip="{lex:Loc SelectExistingImage}"
                    VerticalContentAlignment="Center"
                    Width="65">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource WhiteColor}" />
                            <Setter Property="Cursor" Value="Arrow" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Background" Value="{DynamicResource SecundaryGrayColor}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource GrayColor5}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Click="Load"
                    Foreground="{DynamicResource GrayColor4}"
                    Height="30"
                    Margin="5,0,0,10"
                    ToolTip="{lex:Loc Load}"
                    VerticalContentAlignment="Center"
                    hc:IconElement.Geometry="{DynamicResource LoadGeometry}"
                    hc:IconElement.Height="15"
                    hc:IconElement.Width="15" />
                <Button
                    BorderThickness="0"
                    Click="SaveButton_Click"
                    Content="{lex:Loc ButtonSave}"
                    FontSize="11"
                    Foreground="White"
                    Margin="10,0,0,10"
                    VerticalContentAlignment="Center"
                    Width="90"
                    x:Name="SaveButton">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBlueColor}" />
                            <Setter Property="Cursor" Value="Arrow" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBlueColor}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Height="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Click="Close"
                    Content="{lex:Loc ButtonCancel}"
                    FontSize="11"
                    Foreground="{DynamicResource BlackColor}"
                    Margin="20,0,10,10"
                    VerticalContentAlignment="Center"
                    Width="90"
                    x:Name="CancelButton">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource WhiteColor}" />
                            <Setter Property="Cursor" Value="Arrow" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Background" Value="{DynamicResource SecundaryGrayColor}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource GrayColor5}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</controls1:CustomWindow>
