<UserControl
    d:DataContext="{d:DesignInstance local:RootView,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="495"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="MFAWPF.Views.UI.TaskQueueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:calcBinding="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:controls="clr-namespace:MFAWPF.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:MFAWPF.Views.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:MFAWPF.Styles.Properties"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ContextMenu x:Key="TaskMenu">
            <MenuItem Click="Delete" Header="{lex:Loc Delete}" />
        </ContextMenu>
    </UserControl.Resources>
    <Grid
        Background="{DynamicResource SecundaryBackgroundColor}"
        ClipToBounds="False"
        Grid.Row="1"
        Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="330" Width="7*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20,0,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                Margin="0,5,5,4"
                MinWidth="150"
                VerticalAlignment="Top">

                <TextBlock
                    Foreground="{StaticResource GrayColor4}"
                    HorizontalAlignment="Left"
                    Margin="2,5,0,0"
                    Text="{lex:Loc TaskList}"
                    Width="55" />

                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="2,2,0,0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <Button
                        Click="SelectAll"
                        Foreground="{DynamicResource GrayColor4}"
                        Height="15"
                        IsEnabled="{Binding ViewModel.Idle}"
                        Margin="7,0,0,0"
                        Padding="0"
                        Style="{StaticResource textBoxButton}"
                        ToolTip="{lex:Loc SelectAll}"
                        Width="15"
                        hc:IconElement.Geometry="{StaticResource SelectAllGeometry}" />
                    <Button
                        Click="SelectNone"
                        Foreground="{DynamicResource GrayColor4}"
                        Height="15"
                        IsEnabled="{Binding ViewModel.Idle}"
                        Margin="7,0,0,0"
                        Padding="0"
                        Style="{StaticResource textBoxButton}"
                        ToolTip="{lex:Loc DeselectAll}"
                        Width="15"
                        hc:IconElement.Geometry="{DynamicResource SelectNoneGeometry}" />
                    <Button
                        Click="Edit"
                        Foreground="{DynamicResource GrayColor4}"
                        Height="15"
                        IsEnabled="{Binding ViewModel.Idle}"
                        Margin="7,0,0,0"
                        Padding="0"
                        Style="{StaticResource textBoxButton}"
                        ToolTip="{lex:Loc EditTask}"
                        Visibility="{calcBinding:Binding 'ViewModel.EnableEdit'}"
                        Width="15"
                        hc:IconElement.Geometry="{StaticResource EditGeometry}"
                        x:Name="EditButton" />
                    <Button
                        Click="Add"
                        Foreground="{DynamicResource GrayColor4}"
                        Height="15"
                        IsEnabled="{Binding ViewModel.Idle}"
                        Margin="7,0,0,0"
                        Padding="0"
                        Style="{StaticResource textBoxButton}"
                        ToolTip="{lex:Loc EditTaskDialog_AddTask_Tooltip}"
                        Width="15"
                        hc:IconElement.Geometry="{StaticResource AddRegularGeometry}" />
                    <Button
                        Click="Edit"
                        Foreground="{DynamicResource GrayColor4}"
                        Height="15"
                        IsEnabled="{Binding ViewModel.Idle}"
                        Margin="7,0,0,0"
                        Padding="0"
                        Style="{StaticResource textBoxButton}"
                        ToolTip="{lex:Loc TaskSettings}"
                        Visibility="Collapsed"
                        Width="15"
                        hc:IconElement.Geometry="{StaticResource SettingsRegular}" />

                    <RadioButton
                        Background="Transparent"
                        BorderThickness="0"
                        Checked="ConfigureSettingsPanel"
                        Foreground="{DynamicResource GrayColor4}"
                        GroupName="TaskSettings"
                        IsChecked="{Binding ViewModel.ConnectSettingChecked}"
                        Margin="0"
                        Padding="7,0,5,0"
                        Style="{DynamicResource RadioGroupItemSingle}"
                        ToolTip="{lex:Loc TooltipSettings}"
                        hc:IconElement.Geometry="{StaticResource ConfigGeometry}"
                        hc:IconElement.Height="15"
                        hc:IconElement.Width="15"
                        hc:VisualElement.HighlightBackground="Transparent"
                        hc:VisualElement.HighlightForeground="{DynamicResource PrimaryBrush}"
                        x:Name="ConnectSettingButton" />

                </StackPanel>
            </Grid>

            <hc:ScrollViewer
                Grid.Row="1"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Auto">
                <ListBox
                    AllowDrop="True"
                    BorderThickness="0"
                    ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                    ItemsSource="{Binding ViewModel.TaskItemViewModels}"
                    Margin="2,3,2,0"
                    MinHeight="220"
                    PreviewMouseWheel="TaskList_OnPreviewMouseWheel"
                    ScrollViewer.CanContentScroll="True"
                    dd:DragDrop.DropHandler="{Binding ViewModel.DropHandler}"
                    dd:DragDrop.IsDragSource="{Binding ViewModel.Idle}"
                    dd:DragDrop.IsDropTarget="{Binding ViewModel.Idle}"
                    x:Name="TaskList">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ContextMenu="{StaticResource TaskMenu}" x:Name="ListGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="45" />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    Content="{Binding Name}"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    IsChecked="{Binding IsCheckedWithNull}"
                                    IsHitTestVisible="{Binding ElementName=TaskList, Path=DataContext.ViewModel.Idle}"
                                    ToolTip="{lex:Loc TooltipDragLabel}">
                                    <CheckBox.ContentTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap"
                                                Width="{calcBinding:Binding 'ActualWidth - 70',
                                                                            RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                           AncestorType={x:Type ListBoxItem}}}" />
                                        </DataTemplate>
                                    </CheckBox.ContentTemplate>
                                </CheckBox>
                                <hc:ButtonGroup
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    ToolTip="{Binding Name}"
                                    Visibility="{Binding SettingVisibility}">
                                    <!--  ReSharper disable once Xaml.StaticResourceNotResolved  -->
                                    <RadioButton
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{DynamicResource GrayColor4}"
                                        GroupName="TaskSettings"
                                        HorizontalContentAlignment="Left"
                                        IsChecked="{Binding EnableSetting}"
                                        Margin="0"
                                        Padding="15,0,0,0"
                                        Style="{DynamicResource RadioGroupItemSingle}"
                                        hc:IconElement.Geometry="{StaticResource ConfigGeometry}"
                                        hc:VisualElement.HighlightBackground="Transparent"
                                        hc:VisualElement.HighlightForeground="{DynamicResource PrimaryBrush}" />
                                </hc:ButtonGroup>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </hc:ScrollViewer>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal"
                Width="210">
                <StackPanel
                    HorizontalAlignment="Left"
                    Margin="0,10,0,10"
                    Orientation="Vertical"
                    Width="185">
                    <controls:CustomTextBlock
                        HorizontalAlignment="Center"
                        Margin="20,5,0,0"
                        ResourceKey="{Binding ViewModel.BeforeTask}"
                        TextAlignment="Center" />
                    <hc:Divider Margin="10,2,10,5" />
                    <controls:CustomTextBlock
                        HorizontalAlignment="Center"
                        Margin="20,0,0,0"
                        ResourceKey="{Binding ViewModel.AfterTask}"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Width="160" />
                </StackPanel>
                <hc:ButtonGroup HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!--  ReSharper disable once Xaml.StaticResourceNotResolved  -->
                    <RadioButton
                        Background="Transparent"
                        BorderThickness="0"
                        Checked="ConfigureTaskSettingsPanel"
                        Foreground="{DynamicResource GrayColor4}"
                        GroupName="TaskSettings"
                        Style="{DynamicResource RadioGroupItemSingle}"
                        ToolTip="{lex:Loc TaskSettings}"
                        hc:IconElement.Geometry="{StaticResource ConfigGeometry}"
                        hc:VisualElement.HighlightBackground="Transparent"
                        hc:VisualElement.HighlightForeground="{DynamicResource PrimaryBrush}" />
                </hc:ButtonGroup>
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Click="Start"
                    Content="{lex:Loc StartTask}"
                    FontSize="11"
                    Foreground="{DynamicResource BlackColor}"
                    Height="40"
                    Margin="20,5,20,8"
                    VerticalContentAlignment="Center"
                    Visibility="{calcBinding:Binding '!ViewModel.IsRunning'}"
                    Width="90"
                    x:Name="startButton" />
                <Button
                    Click="Stop"
                    Content="{lex:Loc StopTask}"
                    FontSize="11"
                    Foreground="{DynamicResource BlackColor}"
                    Height="40"
                    Margin="20,5,20,8"
                    VerticalContentAlignment="Center"
                    Visibility="{calcBinding:Binding 'ViewModel.IsRunning'}"
                    Width="90"
                    x:Name="stopButton" />
            </StackPanel>

        </Grid>

        <hc:SimpleStackPanel
            Grid.Column="1"
            Margin="10"
            Orientation="Vertical"
            x:Name="SettingPanel">
            <hc:SimpleStackPanel.RenderTransform>
                <TranslateTransform Y="-5" />

            </hc:SimpleStackPanel.RenderTransform>

        </hc:SimpleStackPanel>


        <hc:ScrollViewer
            BorderBrush="LightGray"
            BorderThickness="1"
            ClipToBounds="False"
            Grid.Column="2"
            Height="{calcBinding:Binding RelativeSource={RelativeSource AncestorType=Grid},
                                         Path='ActualHeight - 20'}"
            HorizontalScrollBarVisibility="Disabled"
            IsInertiaEnabled="True"
            Margin="15,8,10,5"
            PanningMode="VerticalOnly"
            VerticalAlignment="Top"
            VerticalContentAlignment="Top"
            properties:AutoScroll.AutoScroll="True">

            <ItemsControl ItemsSource="{Binding Path=ViewModel.LogItemViewModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <controls:CustomTextBlock
                                FontSize="12"
                                Foreground="{StaticResource GrayColor1}"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="0,5,12,0"
                                Text="{Binding Time}"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch" />
                            <controls:CustomTextBlock
                                FontSize="12"
                                FontWeight="{Binding Weight}"
                                Foreground="{Binding Color}"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="0,5"
                                Text="{Binding Content}"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </hc:ScrollViewer>
    </Grid>
</UserControl>