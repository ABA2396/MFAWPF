<UserControl
    d:DataContext="{d:DesignInstance views:SettingsView,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="550"
    mc:Ignorable="d"
    x:Class="MFAWPF.Controls.Settings.AboutUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:MFAWPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:helper="clr-namespace:MFAWPF.Helper"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:MFAWPF.Controls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MFAWPF.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <controls:CustomTextBlock
                HorizontalAlignment="Center"
                Margin="5"
                VerticalAlignment="Center">
                <Hyperlink
                    Command="{x:Static hc:ControlCommands.OpenLink}"
                    CommandParameter="{x:Static helper:MFAUrls.GitHub}"
                    Cursor="Hand"
                    TextDecorations="None">
                    <TextBlock Text="{lex:Loc GitHub}" />
                </Hyperlink>
            </controls:CustomTextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <controls:CustomTextBlock
                HorizontalAlignment="Center"
                Margin="5"
                VerticalAlignment="Center">
                <Hyperlink
                    Command="{x:Static hc:ControlCommands.OpenLink}"
                    CommandParameter="{x:Static helper:MFAUrls.GitHubIssues}"
                    Cursor="Hand"
                    TextDecorations="None">
                    <TextBlock Text="{lex:Loc Issue}" />
                </Hyperlink>
            </controls:CustomTextBlock>
        </StackPanel>
    </Grid>
</UserControl>